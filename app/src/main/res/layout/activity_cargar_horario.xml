<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CargarHorario">

    <Button
        android:id="@+id/horario3"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/botones_cool"
        android:fontFamily="@font/audiowide"
        android:onClick="cargar"
        android:text="HORARIO 3"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horario2" />

    <Button
        android:id="@+id/horario2"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/botones_cool"
        android:fontFamily="@font/audiowide"
        android:onClick="cargar"
        android:text="HORARIO 2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horario1"
        app:layout_constraintVertical_bias="0.29" />

    <Button
        android:id="@+id/horario1"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/botones_cool"
        android:fontFamily="@font/audiowide"
        android:onClick="cargar"
        android:text="HORARIO 1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/botones_cool"
        android:onClick="openPrincipal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>